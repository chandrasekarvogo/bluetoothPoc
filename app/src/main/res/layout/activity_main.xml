<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_unlock"
        android:layout_width="109dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:background="#9013FE"
        android:text="Unlock"
        android:textColor="#ffffff" />



    <TextView
        android:id="@+id/bt_connection_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:text="10"
        android:textColor="#4A4A4A "
        android:textSize="72sp" />

    <Button
        android:id="@+id/btn_send_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#9013FE"
        android:text="Send Data"
        android:textColor="#ffffff" />



    <TextView
        android:id="@+id/bt_connection_time_label"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_unlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Time Remaining"
        android:textSize="12sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_above="@+id/btn_send_data"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">
        <View style="@style/dividerHorizontal"/>
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/bt_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="BT Status:" />

            <TextView
                android:id="@+id/bt_status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="NA"
                android:textColor="#9013FE" />
</LinearLayout>
        <View style="@style/dividerHorizontal"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/sms_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:text="SMS Status:" />

    <TextView
        android:id="@+id/sms_status_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="NA"
        android:textColor="#9013FE" />
</LinearLayout>
        <View style="@style/dividerHorizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Location: " />

        <TextView
            android:id="@+id/tv_location_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="NA"
            android:textColor="#9013FE" />
    </LinearLayout>
        <View style="@style/dividerHorizontal"/>
    </LinearLayout>
</RelativeLayout>